---
import creativity from '../data/creativity.json';
import handImage from '../assets/picto-1.png';
import plusImage from '../assets/plus.png';
import moinsImage from '../assets/moins.png';
import picto2 from '../assets/picto-2.png';
import picto3 from '../assets/picto-3.png';

// Mapping des images
const imageMap: Record<string, any> = {
  '../assets/picto-1.png': handImage,
  '../assets/plus.png': plusImage,
  '../assets/moins.png': moinsImage,
  '../assets/picto-2.png': picto2,
  '../assets/picto-3.png': picto3,
};

const hand = imageMap[creativity.left.hand] || handImage;
const plus = imageMap['../assets/plus.png'] || plusImage;
const moins = imageMap['../assets/moins.png'] || moinsImage;
const topDecoration = imageMap[creativity.right.decorations.top] || picto2;
const bottomDecoration = imageMap[creativity.right.decorations.bottom] || picto3;
---

<section class="md:py-24 py-12 pb-24 relative bg-primary-light">
  <div class="container mx-auto px-6 relative z-2">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
      <!-- Colonne gauche - Fond noir -->
      <div class="rounded-4xl p-8 lg:p-12 pt-0 lg:pt-0 space-y-8 animate-on-scroll bg-primary-dark">
        <!-- Main pointant -->
        <div class="flex justify-start">
          <img 
            src={hand.src}²
            alt="Main pointant"
            class="w-16 h-auto object-contain"
          />
        </div>

        <!-- Titres avec mots en bleu -->
        <div class="space-y-4">
          {creativity.left.items.map((item) => (
            <h2 class="text-lg font-bold text-white uppercase leading-tight font-climate-crisis">
              {item.text} <span class="text-primary-blue">{item.highlight}</span>.
            </h2>
          ))}
        </div>

        <!-- Icône flèche -->
        <div class="w-12 h-12 rounded-lg flex items-center justify-center rotate-4deg bg-primary-blue">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="transform: rotate(-45deg);">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </div>

        <!-- Liste avec plus et moins -->
        <ul class="space-y-4">
          {creativity.left.list.map((item) => (
            <li class="flex items-center gap-3">
              <img 
                src={item.type === 'plus' ? plus.src : moins.src}
                alt={item.type === 'plus' ? 'Plus' : 'Moins'}
                class="w-6 h-6 object-contain"
              />
              <span class="text-white font-bold text-lg uppercase font-climate-crisis">
                {item.text}
              </span>
            </li>
          ))}
        </ul>
      </div>

      <!-- Colonne droite - Fond gris clair -->
      <div class="md:relative space-y-6 animate-on-scroll md:top-[-170px]" style="animation-delay: 0.2s;">
        <!-- Banner bleu et Titre avec rotation -->
        <div class="rotate-2deg">
          <!-- Décorations bleues 3D Top -->
          <div class="top-0 right-0 left-0 w-32 h-32 lg:w-48 lg:h-48 z-10 hidden md:block">
            <img 
              src={topDecoration.src}
              alt="Décoration"
              class="w-[181px] h-[181px] object-contain"
            />
          </div>
          <!-- Banner bleu -->
          <div class="text-white px-6 py-3 rounded-lg inline-block mb-4 md:ml-20 bg-primary-blue">
            <span class="font-bold text-lg uppercase tracking-wide font-climate-crisis">
              {creativity.right.banner}
            </span>
          </div>

          <!-- Titre -->
          <div class="space-y-2">
            <h2 class="text-3xl lg:text-4xl font-bold uppercase leading-tight md:ml-20 font-climate-crisis text-primary-dark">
              {creativity.right.title.line1}
            </h2>
            <h2 class="text-3xl lg:text-4xl font-bold uppercase leading-tight md:ml-20 font-climate-crisis text-primary-dark">
              {creativity.right.title.line2} <span class="text-primary-blue">{creativity.right.title.line3}</span>
            </h2>
          </div>
        </div>

        <!-- Paragraphes -->
        <div class="space-y-4 pt-4 md:ml-20">
          {creativity.right.paragraphs.map((paragraph) => (
            <p class="text-base lg:text-lg leading-relaxed font-black font-montserrat text-primary-dark">
              {paragraph}
            </p>
          ))}
        </div>
      </div>
    </div>
  </div>
  <!-- Décorations bleues 3D Bottom -->
  <div class="absolute bottom-[-50px] right-0 flex items-end justify-end z-10">
    <img 
      src={bottomDecoration.src}
      alt="Décoration"
      class="w-[133px] h-[133px] object-contain object-right"
    />
  </div>
</section>

