---
import video from '../data/video.json';
---

<section class="relative w-full" style="height: 50vh;">
  <!-- Lecteur vidéo -->
  <div class="relative w-full h-full" style="background-color: #030508;">
    <div class="relative w-full h-full">
      <!-- Image/Thumbnail de la vidéo -->
      <img
        src={video.player.thumbnail}
        alt="Video thumbnail"
        class="w-full h-full object-cover"
      />
      
      <!-- Overlay PLAY -->
      <div class="absolute inset-0 flex items-center justify-center" style="background-color: rgba(3, 5, 8, 0.3);">
        <div class="flex flex-col items-center gap-4">
          <!-- Icône de lecture -->
          <div class="w-16 h-16 bg-white bg-opacity-90 rounded-full flex items-center justify-center cursor-pointer hover:bg-opacity-100 transition-all">
            <svg class="w-8 h-8 ml-1" fill="currentColor" viewBox="0 0 24 24" style="color: #030508;">
              <path d="M8 5v14l11-7z"/>
            </svg>
          </div>
          <!-- Texte PLAY -->
          <span class="text-white text-4xl font-bold uppercase tracking-wider" style="font-family: 'Climate Crisis', sans-serif;">
            {video.player.playText}
          </span>
        </div>
      </div>
    </div>
  </div>
</section>

