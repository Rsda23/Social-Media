---
import part1 from '../assets/part-1.png';
import part2 from '../assets/part-2.png';
import part3 from '../assets/part-3.png';
import part4 from '../assets/part-4.png';
import part5 from '../assets/part-5.png';
---

<section class="md:py-24 py-12 bg-primary-light">
  <div class="container mx-auto px-6">
    <!-- Section supérieure - Question et titre -->
    <div class="mb-16 animate-on-scroll">
      <!-- Question avec rotation -->
      <div class="text-center mb-8 rotate-2deg">
        <h2 class="text-4xl lg:text-5xl font-bold uppercase tracking-wide font-climate-crisis text-primary-dark">
          ÇA VOUS SEMBLE <span class="text-primary-blue">TROP BEAU ?</span>
        </h2>
      </div>
      
      <!-- Titre DEMANDEZ LEUR avec flèche -->
      <div class="flex items-center gap-4 justify-center">
        <h3 class="text-2xl lg:text-3xl font-bold uppercase tracking-wide font-climate-crisis text-primary-dark">
          DEMANDEZ LEUR
        </h3>
        <!-- Icône flèche avec fond blanc et flèche bleue -->
        <div class="w-12 h-12 rounded-lg flex items-center justify-center rotate-4deg bg-white">
          <svg class="w-6 h-6 text-primary-blue" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="transform: rotate(-45deg);">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
          </svg>
        </div>
      </div>
    </div>

    <!-- Section inférieure - Logos clients -->
    <div class="flex flex-col md:flex-row justify-center items-center gap-8 lg:gap-12 animate-on-scroll" style="animation-delay: 0.2s;">
      <img 
        src={part1.src}
        alt="Babolat"
        style="width: 175px;"
        class="object-contain opacity-70 hover:opacity-100 transition-opacity"
      />
      
      <img 
        src={part2.src}
        alt="3 Brasseurs"
        style="width: 175px;"
        class="object-contain opacity-70 hover:opacity-100 transition-opacity"
      />
      
      <img 
        src={part3.src}
        alt="Met' Lyon"
        style="width: 175px;"
        class="object-contain opacity-70 hover:opacity-100 transition-opacity"
      />
      
      <img 
        src={part4.src}
        alt="GRDF"
        style="width: 175px;"
        class="object-contain opacity-70 hover:opacity-100 transition-opacity"
      />
      
      <img 
        src={part5.src}
        alt="Zefirent"
        style="width: 175px;"
        class="object-contain opacity-70 hover:opacity-100 transition-opacity"
      />
    </div>
  </div>
</section>
