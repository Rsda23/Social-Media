---
import search from '../data/search.json';
import searchImage from '../assets/search.png';
---

<section class="py-12 rounded-t-[40px]" style="background-color: #0084FF;">
  <div class="container mx-auto px-6">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Barre de recherche -->
      <div class="animate-on-scroll">
        <div class="inline-block">
          <img 
            src={searchImage.src}
            alt="Barre de recherche"
            class="w-64 sm:w-80 lg:w-96 h-auto object-contain"
          />
        </div>
      </div>

      <!-- Titre principal -->
      <div class="space-y-4 animate-on-scroll mt-0" style="animation-delay: 0.2s;">
        <h2 class="text-3xl lg:text-5xl font-bold leading-tight" style="font-family: 'Climate Crisis', sans-serif; color: #030508;">
          <span class="block" style="transform: rotate(-1deg);">{search.title.line1}</span>
          <span class="block" style="transform: rotate(-1deg);">{search.title.line2}</span>
        </h2>
        <h3 class="text-3xl lg:text-5xl font-bold text-white leading-tight" style="font-family: 'Climate Crisis', sans-serif; transform: rotate(-1deg);">
          {search.title.line3}
        </h3>
      </div>

      <!-- Bouton -->
      <div class="animate-on-scroll mt-6" style="animation-delay: 0.4s;">
        <a 
          href={search.button.href}
          class="inline-block px-6 py-3 text-white rounded font-medium transition-all"
          style="background-color: #030508;"
          style="font-family: 'Montserrat', sans-serif; border-radius: 4px;"
        >
          {search.button.text}
        </a>
      </div>
    </div>
  </div>
</section>

