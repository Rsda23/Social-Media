---
import search from '../data/search.json';
import searchImage from '../assets/search.png';
---

<section class="py-12 rounded-t-[40px] bg-primary-blue">
  <div class="container mx-auto px-6">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Barre de recherche -->
      <div class="animate-on-scroll">
        <div class="inline-block">
          <img 
            src={searchImage.src}
            alt="Barre de recherche"
            class="w-64 sm:w-80 lg:w-96 h-auto object-contain"
          />
        </div>
      </div>

      <!-- Titre principal -->
      <div class="space-y-4 animate-on-scroll mt-0" style="animation-delay: 0.2s;">
        <h2 class="text-3xl lg:text-5xl font-bold leading-tight font-climate-crisis text-primary-dark">
          <span class="block" style="transform: rotate(-1deg);">{search.title.line1}</span>
          <span class="block" style="transform: rotate(-1deg);">{search.title.line2}</span>
        </h2>
        <h3 class="text-3xl lg:text-5xl font-bold text-white leading-tight font-climate-crisis" style="transform: rotate(-1deg);">
          {search.title.line3}
        </h3>
      </div>

      <!-- Bouton -->
      <div class="animate-on-scroll mt-6 my-3" style="animation-delay: 0.4s;">
        <a 
          href={search.button.href}
          class="inline-block px-10 py-4 bg-black text-white font-bold text-lg rounded-lg hover:bg-gray-800 transition-all transform hover:scale-105 font-montserrat"
        >
          {search.button.text}
        </a>
      </div>
    </div>
  </div>
</section>

